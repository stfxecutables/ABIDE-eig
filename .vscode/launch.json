  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Current File with Args",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": [
        "--gpus=1",
        "--max_epochs=20",
        "--preload",
        // "--slice_start=100",
        // "--slice_end=170",
        "--batch_size=8",
        "--check_val_every_n_epoch=1"
      ]
    }
  ]
}